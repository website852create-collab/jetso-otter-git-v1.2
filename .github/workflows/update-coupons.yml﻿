name: Daily Coupon Update

on:
  schedule:
    - cron: '0 2 * * *' # 每天 UTC 02:00 (香港時間 10:00) 執行
  workflow_dispatch: # 允許手動點擊按鈕執行

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3
      - name: Setup Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '18'
      - name: Install Dependencies
        run: npm install @supabase/supabase-js
      - name: Run Fetch Script
        env:
          NEXT_PUBLIC_SUPABASE_URL: ${{ secrets.NEXT_PUBLIC_SUPABASE_URL }}
          SUPABASE_SERVICE_ROLE_KEY: ${{ secrets.SUPABASE_SERVICE_ROLE_KEY }}
          CHINESEAN_TOKEN: ${{ secrets.CHINESEAN_TOKEN }}
          CHINESEAN_WEBSITE_ID: ${{ secrets.CHINESEAN_WEBSITE_ID }}
        run: node scripts/fetch-coupons.js